<h1>Welcome to the Blog</h1>
    {{#if posts.length}}
        <ul>
            {{#each posts as |post|}}
                <li>
                    <h2>{{post.title}}</h2>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p id="no-posts">No blog posts available.</p>
    {{/if}}
